<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_budget"
    android:padding="12dp">

    <TextView
        android:id="@+id/walletName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mazury 2025"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/manrope_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/balanceText" />

    <!-- Balance -->
    <TextView
        android:id="@+id/balanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21"
        android:textSize="16sp"
        android:textColor="@color/orange"
        android:fontFamily="@font/manrope_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/avatarsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        app:layout_constraintTop_toBottomOf="@id/walletName"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2"
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/manrope_bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/statusLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/receivableText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receivable: 0"
            android:textSize="12sp"
            android:textColor="@color/green_success"
            android:fontFamily="@font/manrope_bold"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/debtText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debt: 0"
            android:textSize="12sp"
            android:textColor="@color/red_error"
            android:fontFamily="@font/manrope_bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
