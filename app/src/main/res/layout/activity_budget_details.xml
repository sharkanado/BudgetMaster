<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <!-- AppBar with collapsing and pinned sections -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        app:liftOnScroll="true">

        <!-- Collapsible Section (Budget name + members) -->
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Budget Name + Balance -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/budgetNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget Name"
                        android:textColor="@color/orange"
                        android:textSize="20sp"
                        android:fontFamily="@font/manrope_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/userBalanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+0 PLN"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope_regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@id/budgetNameText" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Members Recycler (fixed height) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/membersRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clipToPadding="false" />
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <!-- Pinned Section: Expenses Title + New Button -->
        <!-- Pinned Section: Expenses Title + New Button -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_collapseMode="pin">

            <!-- Expenses Title (left-aligned) -->
            <TextView
                android:id="@+id/expensesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expenses"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/manrope_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <!-- New Button (right-aligned) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/newExpenseBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:text="New"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/expensesTitle"
                app:layout_constraintBottom_toBottomOf="@id/expensesTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <!-- RecyclerView for expenses (scrollable) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/accordionRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
