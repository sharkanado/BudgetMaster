<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey"
    tools:context=".ui.activities.AddNewBudget">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/createBudgetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:text="Create Budget"
            android:textColor="@color/orange"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Budget Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/budgetNameInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Budget Name"
            android:textColorHint="@color/grey_light"
            app:boxBackgroundColor="@color/grey_dark"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/createBudgetTitle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/budgetNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Currency Label -->
        <TextView
            android:id="@+id/currencyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Preferred Currency"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintTop_toBottomOf="@id/budgetNameInputLayout"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Preferred Currency Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/currencyDropdownLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="@color/grey_dark"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/currencyLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/currencySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select currency"
                android:inputType="none"
                android:textColor="@color/white"
                android:popupBackground="@color/grey_dark"
                android:fontFamily="@font/manrope_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Members Section Title -->
        <TextView
            android:id="@+id/membersTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Members"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintTop_toBottomOf="@id/currencyDropdownLayout"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Members Container (initially empty, filled in code) -->
        <LinearLayout
            android:id="@+id/membersContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/membersTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Add Member Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addMemberBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="+ Add Member"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:backgroundTint="@color/grey_dark"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintTop_toBottomOf="@id/membersContainer"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveBudgetBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/manrope_extrabold"
            android:paddingVertical="12dp"
            android:text="Create Budget"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="@color/orange"
            app:cornerRadius="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
